<?xml version="1.0" encoding="utf-8" ?>
<Border xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        
        x:Name="control"
        
        Style="{StaticResource TileBorder}"
          
        x:Class="OpenDictionary.Views.Controls.TileView">
    <Grid RowDefinitions="*,*" RowSpacing="10" BindingContext="{x:Reference control}">
        <Label Grid.Row="0" Text="{Binding Title}" Style="{StaticResource TileTitle}"/>
        <Label Grid.Row="1" Text="{Binding SubTitle}" Style="{StaticResource TileSubTitle}"/>
    </Grid>

    <Border.GestureRecognizers>
        <TapGestureRecognizer 
            BindingContext="{x:Reference control}"  NumberOfTapsRequired="1" 
            Command="{Binding Tap}" CommandParameter="{Binding CommandParameter}"/>
    </Border.GestureRecognizers>
</Border>